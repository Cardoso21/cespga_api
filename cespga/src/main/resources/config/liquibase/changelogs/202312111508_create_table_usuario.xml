<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet for creating the 'users' table -->
    <changeSet id="202312111509" author="Wagner Cardoso">
        <createTable tableName="users">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_name" type="varchar(255)">
                <constraints nullable="true" unique="true"/>
            </column>

            <column name="full_name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="password" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

            <column name="account_non_expired" type="bit">
                <constraints nullable="true"/>
            </column>

            <column name="account_non_locked" type="bit">
                <constraints nullable="true"/>
            </column>

            <column name="credentials_non_expired" type="bit">
                <constraints nullable="true"/>
            </column>

            <column name="enabled" type="bit">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
